<% @sync_param ||=
  SyncParam.find_or_initialize_by(project_id: @project.id)%>

<%= form_tag(project_sync_params_path(@project), method: :post, class: "tabular") do %>
  <%= tag.div class: 'box tabular' do %>
    <%= tag.p do %>
      <%= show(@sync_param).root_label %>
      <%= show(@sync_param).root_checkbox %>
      <%= show(@sync_param).root_info %>
    <% end %>
    
    <%= tag.p do %>
      <%= show(@sync_param).tracker_label %>
      <%= show(@sync_param).tracker_list %>
    <% end %>
  
    <%= tag.p do %>
      <%= show(@sync_param).filter_label %>
      <%= show(@sync_param).filter_name %>
      <%= show(@sync_param).filter_selection %> 
    <% end %>
  <% end %>
  <%= submit_tag l(:button_save) %>
<% end %>