<%= tag.fieldset do %>
  <%= tag.legend l(:legend_catalogue_settings) %>
  <%= tag.p do %>
    <%= content_tag :label, l(:label_catalogue_source_project) %>
    <%= select_tag(
          'settings[source_project]', 
          options_for_select(
            Project.pluck(:name, :id), 
            { selected: @settings['source_project'] }
          ), 
          include_blank: true
        ) %>
	  <%= tag.em class: 'info' do %>
      <%= l(:text_source_project_setting) %>
    <% end %>
  <% end %>

  <%= tag.p do %>
    <%= content_tag :label, l(:label_source_trackers) %>
    <%= select_tag(
          'settings[source_trackers][]', 
          options_for_select(
            Tracker.pluck(:name, :id), 
            { selected: @settings['source_trackers'] }
          ),
          multiple: true, 
          include_blank: true
        ) %>
	  <%= tag.em class: 'info' do %>
      <%= l(:text_source_tracker_setting) %>
    <% end %>
  <% end %>
<% end %>

<%= tag.fieldset do %>
  <%= tag.legend l(:legend_allocation_settings) %>
  <%= tag.p do %>
    <%= content_tag :label, l(:label_allocation_field) %>
    <%= select_tag(
          'settings[allocation_field]', 
          options_for_select(
            IssueCustomField.pluck(:name, :id), 
            { selected: @settings['allocation_field'] }
          ), 
          include_blank: true
        ) %>
	  <%= tag.em class: 'info' do %>
      <%= l(:text_allocation_field_setting) %>
    <% end %>
  <% end %>
<% end %>