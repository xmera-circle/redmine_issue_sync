<% @synchronisation_setting ||= 
  SynchronisationSetting.find_or_create_by(project_id: @project.id) %>

<%= error_messages_for 'synchronisation_setting' %>

<%= form_tag(sync_issues_settings_path(@project), method: :post, class: "tabular") do %>
  <%= tag.fieldset class: 'box tabular' do %>
    <%= tag.legend l(:legend_synchronisation_settings) %>
    <%= tag.p do %>
      <%= content_tag :label, l(:field_root) %>
      <%= check_box :synchronisation_setting, :root %>
      <%= tag.em class: 'info' do %>
        <%= l(:text_root_field_setting) %>
      <% end %>
    <% end %>

    <%= tag.p do %>
      <%= content_tag :label, l(:field_allocation_criteria) %>
      <%= select_tag 'synchronisation_setting[allocation_criteria]',
                     options_for_allocation_criteria_select(
                      selected: @synchronisation_setting.allocation_criteria
                     ),
                     include_blank: true %>
      <%= tag.em class: 'info' do %>
        <%= l(:text_allocation_criteria) %>
      <% end %>
    <% end %>

  <% end %>
  <%= submit_tag l(:button_save) %>
<% end %>